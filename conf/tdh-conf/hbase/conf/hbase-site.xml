<configuration>
    <property>
        <name>hbase.master.port</name>
        <value>16000</value>
    </property>

    <property>
        <name>hbase.master.info.bindAddress</name>
        <value>10.10.6.4</value>
    </property>

    <property>
        <name>hbase.master.info.port</name>
        <value>16010</value>
    </property>

    <property>
        <name>hbase.regionserver.port</name>
        <value>16020</value>
    </property>
<!--
    <property>
        <name>hbase.regionserver.info.bindAddress</name>
        <value>0.0.0.0</value>
    </property>
-->
    <property>
        <name>hbase.regionserver.info.port</name>
        <value>16030</value>
    </property>

    <property>
        <name>hbase.regionserver.thrift.port</name>
        <value>9090</value>
    </property>

    <property>
        <name>hbase.thrift.info.port</name>
        <value>9095</value>
    </property>

    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
    </property>

    <property>
        <name>hbase.rootdir</name>
        <value>hdfs://tdh-m01:8020/hbase</value>
    </property>

    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>tdh-m01</value>
    </property>

    <property>
        <name>hbase.table.sanity.checks</name>
        <value>false</value>
    </property>

    <property>
        <name>hbase.coprocessor.enabled</name>
        <value>true</value>
    </property>
</configuration>
